{
    "index_patterns":[
        "log-*"
    ],
    "settings":{
        "number_of_shards":1,
        "number_of_replicas":0,
        "index.lifecycle.name":"retention_policy"
    },
    "mappings":{
        "dynamic":"strict",
        "properties":{
            "logLevel":{
                "type":"keyword"
            },
            "eventId":{
                "type":"integer",
                "coerce":false
            },
            "eventName":{
                "type":"keyword"
            },
            "message":{
                "type":"text"
            },
            "stackTrace":{
                "type":"text"
            },
            "source":{
                "type":"keyword"
            },
            "exceptionMessage":{
                "type":"text"
            },
			      "hResult":{
                "type":"integer",
				        "coerce":false
            },
            "helpLink":{
                "type":"keyword"
            },
            "timestamp":{
                "type":"date",
                "format":"epoch_millis"
            }
        }
    },
    "aliases":{
        "logs":{
        }
    }
}